<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loginbg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:layout_marginLeft="36.7dp"
                android:orientation="horizontal">

                <com.brand.Kratos.customfonts.MyTextView_Roboto_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KRATOS"
                    android:textSize="31sp"
                    android:textColor="#ffffff"/>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="9.2dp"
                    android:background="#ffffff"/>

                <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPORTS"
                    android:layout_marginLeft="8.5dp"
                    android:textSize="20sp"
                    android:textColor="#f05421"/>
            </LinearLayout>


            <com.brand.Kratos.customfonts.EditText_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="Full name"
                android:layout_marginTop="54.7dp"
                android:id="@+id/fullname_txt_id"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:textColorHint="#ffffff"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textSize="14.4sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33ffffff"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="6.5dp"/>

            <com.brand.Kratos.customfonts.EditText_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="Phone Number"
                android:layout_marginTop="54.7dp"
                android:id="@+id/phone_number_txt_id"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:textColorHint="#ffffff"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textSize="14.4sp" />            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33ffffff"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="6.5dp"/>

            <com.brand.Kratos.customfonts.EditText_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="Email"
                android:layout_marginTop="54.7dp"
                android:id="@+id/email_txt_id"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:textColorHint="#ffffff"
                android:inputType="textEmailAddress"
                android:textColor="#ffffff"
                android:textSize="14.4sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33ffffff"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="6.5dp"/>


            <com.brand.Kratos.customfonts.EditText_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33.6dp"
                android:background="#00000000"
                android:hint="Password"
                android:id="@+id/password_txt_id"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:textColorHint="#ffffff"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textSize="14.4sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33ffffff"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="6.5dp"/>


            <com.brand.Kratos.customfonts.EditText_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33.6dp"
                android:background="#00000000"
                android:hint="Confirrm Password"
                android:id="@+id/confirm_password_txt_id"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:textColorHint="#ffffff"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textSize="14.4sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33ffffff"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="6.5dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="250dp"
            android:layout_height="wrap_content">
            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34.6dp"
                android:layout_marginRight="33.6dp"
                android:layout_marginTop="53.8dp"
                android:id="@+id/login_btn_id"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:padding="16.4dp"
                android:text="Signup"
                android:textColor="#ffffff"
                android:textSize="13.3sp" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/Linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginBottom="28.1dp"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true">
                <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You already have an account?"
                    android:textSize="14.4sp"
                    android:textColor="#ffffff"/>
                <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signin_btn_id"
                    android:text="Sign Up"
                    android:layout_marginLeft="5dp"
                    android:textSize="14.4sp"
                    android:textColor="#d22532"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>