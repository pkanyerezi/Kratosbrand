<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="163.8dp"
    android:layout_height="207dp"
    android:layout_marginLeft="11.3dp"
    android:layout_marginTop="11.3dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="163.8dp"
            android:layout_height="163.8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12.5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
                    android:id="@+id/musicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="-.07sp"
                    android:text="Westlife"
                    android:textColor="@color/black" />

                <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/musicArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:text="By nucol Denric"
                    android:textColor="#99000000"
                    android:textSize="10.3sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_more" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginRight="7dp"
        android:layout_marginTop="124dp">

        <ImageView
            android:layout_width="33.4dp"
            android:layout_height="33.4dp"
            android:src="@drawable/playbutton" />
    </FrameLayout>

</android.support.v7.widget.CardView>