<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:mli_shape_color="@color/black"
        app:mli_shape_type="circle"
        app:mli_letter="KP"
        app:mli_letter_color="@color/white"
        app:mli_letter_size="26"
        app:mli_letters_number="2"
        app:mli_initials="true"
        app:mli_initials_number="2"
        />

    <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
        android:id="@+id/username_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:lineSpacingExtra="2.7sp"
        android:text="Kanyerezi Patrick"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/more1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="3.5dp"
            android:src="@drawable/ic_more_vert_black_24dpwhite"
            />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.Toolbar>