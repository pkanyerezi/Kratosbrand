<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/thumbnail_container"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/thumbnail_id"
                android:src="@drawable/youtube"/>

            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:id="@+id/duration_id"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:text="08:45"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                android:background="@color/transaparent_black"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="2dp"
                    android:id="@+id/textrecycler"
                    android:textColor="@color/white"
                    android:textSize="18sp"

                    android:text="08:45"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/timestamp"
                    android:padding="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_thumb_up_black_24dp"
                android:paddingBottom="2dp"
                android:id="@+id/likes_tx_id"
                android:paddingTop="2dp"
                android:textSize="12.5dp"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"
                android:text="\n22 likes"
                android:textColor="@color/mt_text_black" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_thumb_down_black_24dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textStyle="bold"
                android:textSize="12.5dp"
                android:id="@+id/dislikes_txt_id"
                style="?android:attr/borderlessButtonStyle"
                android:text="\n26 dislikes"
                android:textColor="@color/mt_text_black" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_share_black_24dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="12.5dp"
                android:id="@+id/share_video"
                style="?android:attr/borderlessButtonStyle"
                android:text=""
                android:textColor="@color/mt_text_black" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableTop="@drawable/ic_group_black_24dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:textSize="12.5dp"
                android:id="@+id/comment_btn"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/mt_text_black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/post_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp" />

            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:id="@+id/textrecycler22"
                android:layout_weight="1"
                android:textColor="@android:color/black"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/views_id_txt"
                android:textColor="@android:color/black"/>
            <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/viewgrey"/>
</LinearLayout>
</ScrollView>