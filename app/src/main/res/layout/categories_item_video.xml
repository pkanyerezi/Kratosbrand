<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:id="@+id/category_container_id"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary"
    card_view:cardElevation="0dp"

    card_view:cardMaxElevation="0dp"
    card_view:contentPaddingLeft="-3dp"
    card_view:contentPaddingRight="-3dp"
    card_view:contentPaddingTop="-3dp"
    card_view:contentPaddingBottom="-3dp"
    app:cardBackgroundColor="@color/colorPrimary"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="220dp">
<View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_weight="1"/>
            <com.brand.Kratos.customfonts.MyTextView_Roboto_Bold
                android:textAlignment="center"
                android:text="Text"
                android:textColor="#fff"
                android:textSize="48sp"
                android:id="@+id/category_name_letter"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:textAlignment="center"
                android:text="Text"
                android:textColor="#fff"
                android:textSize="18sp"
                android:id="@+id/category_name_id"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
