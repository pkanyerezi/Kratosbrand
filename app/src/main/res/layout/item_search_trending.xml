<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:id="@+id/category_container_id"
    android:layout_margin="8dp"
    card_view:cardElevation="1dp"
    android:layout_marginBottom="8dp"
    card_view:cardMaxElevation="0dp"
    card_view:contentPaddingLeft="-3dp"
    card_view:contentPaddingRight="-3dp"
    card_view:contentPaddingTop="-3dp"
    card_view:contentPaddingBottom="-3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:id="@+id/thumbnail_container"
            android:layout_height="170dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/thumbnail_id"
                android:src="@drawable/youtube"/>
            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:background="@color/transaparent_black"
                android:id="@+id/duration_id"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:text="08:45"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="2dp"
            android:layout_marginRight="4dp"
            android:id="@+id/textrecycler"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="08:45"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>
