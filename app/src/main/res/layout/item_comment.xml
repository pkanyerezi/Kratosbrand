<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#31707070"
        app:civ_border_width="0.7dp" />
    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/letter_budge"
        app:mli_shape_color="@color/black"
        app:mli_shape_type="circle"
        app:mli_letter="KP"
        android:layout_marginRight="8dp"
        app:mli_letter_color="@color/white"
        app:mli_border_color="@color/image_gray"
        app:mli_border_size="2"

        app:mli_letter_size="26"
        app:mli_letters_number="2"
        app:mli_initials="true"
        app:mli_initials_number="2"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">
        <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:text="Kanyerezi patrick"
            android:id="@+id/name_id"
            android:textColor="@color/pop_text_gray"
            android:textSize="15.5dp"

            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content" />
        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/timestamp"
            android:layout_marginRight="4dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="top"
            android:textColor="@color/pop_text_gray"
            android:layout_height="wrap_content"/>
        <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:textSize="13dp"
            android:layout_below="@+id/name_id"
            android:textColor="@color/black"
            android:id="@+id/comment_txt_id"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@color/pop_text_gray"
        />
</LinearLayout>

