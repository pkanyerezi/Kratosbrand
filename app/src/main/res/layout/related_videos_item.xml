<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/related_video_container"
    android:layout_marginTop="19.3dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22.3dp"
        android:layout_marginLeft="22.3dp">

        <ImageView
            android:layout_width="43.7dp"
            android:layout_height="43.7dp"
            android:id="@+id/thumbnail_id"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/playimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/singleplaybutton"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="9.3dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginLeft="9.3dp">

        <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textrecycler"
            android:text="I Lay My Love on You"
            android:textSize="12.3dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.brand.Kratos.customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Love Album - "
                android:id="@+id/views_id_txt"
                android:textSize="12.3dp"
                android:textColor="@color/mt_text_black" />

            <com.brand.Kratos.customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:57"
                android:id="@+id/duration_id"
                android:textSize="12.3dp"
                android:textColor="@color/mt_text_black"
                android:textStyle="normal"/>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_more_vert_gray"
        android:layout_gravity="center"
        android:layout_marginEnd="24.3dp"
        android:layout_marginRight="24.3dp" />

</LinearLayout>


